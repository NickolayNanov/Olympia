@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    this.ViewData["Title"] = "Register";
    @model Olympia.Data.Models.BindingModels.Account.UserRegisterBingingModel
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data"
              method="post"
              asp-controller="Accounts"
              asp-area="Register"
              asp-antiforgery="true">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            @if (this.ViewData["Errors"] != null)
            {
                <h5 class="text-danger">@this.ViewData["Errors"]</h5>
            }
            <div class="form-group">
                <label asp-for="@Model.Username"></label>
                <input type="text" asp-for="@Model.Username" class="form-control" />
                <span asp-validation-for="@Model.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.FullName"></label>
                <input type="text" asp-for="@Model.FullName" class="form-control" />
                <span asp-validation-for="@Model.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Email"></label>
                <input type="email" asp-for="@Model.Email" class="form-control" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Address"></label>
                <input type="text" asp-for="@Model.Address" class="form-control" />
                <span asp-validation-for="@Model.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Age"></label>
                <input type="number" asp-for="@Model.Age" class="form-control" />
                <span asp-validation-for="@Model.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Gender"></label>
                <select asp-for="@Model.Gender" class="form-control" asp-items="@Html.GetEnumSelectList<Olympia.Data.Domain.Enums.Gender>()"></select>
                <span asp-validation-for="@Model.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Password"></label>
                <input type="password" asp-for="@Model.Password" class="form-control" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ConfirmPassword"></label>
                <input type="password" asp-for="@Model.ConfirmPassword" class="form-control" />
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ProfilePicturImgUrl"></label>
                <input type="file" asp-for="@Model.ProfilePicturImgUrl" class="form-control-file" />
                <span asp-validation-for="@Model.ProfilePicturImgUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
            <div class="form-group">
                <p>
                    <a asp-controller="Accounts"
                       asp-action="Login">
                        Already have an account?
                    </a>
                </p>
            </div>
        </form>
    </div>
</div>