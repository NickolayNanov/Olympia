@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "ItemsAll";
    @model Olympia.Data.Models.ViewModels.Shop.ShopViewModel
}

<div class="row">
    <h1 class="text-lg-center col-sm-8">All Items</h1>

    <div class="col-sm-2">
        <a asp-area="AreaAdministration"
           asp-controller="Administration"
           asp-action="AddItem" class="btn btn-danger">Add Item</a>
    </div>

    <div class="col-sm-2">
        <a asp-area="AreaAdministration"
           asp-controller="Administration"
           asp-action="AddSupplier" class="btn btn-danger">Add Supplier</a>
    </div>

</div>
<div class="container">
    <div class="row">
        @if (Model.Items.Any())
        {
            @foreach (var item in Model.Items)
            {
                <div class="col-md-3 card mr-5 mb-4">
                    <i><h5 class="card-header text-center">@item.Name</h5></i>
                    <img class="card-img" src="@item.ImgUrl" alt="Loading..." />
                    <div class="d-flex justify-content-center">
                        <strong><p class="text-center">@item.Supplier.Name</p></strong>
                    </div>
                    <div class="d-flex justify-content-center row">
                        <a class="btn btn-danger col-lg-5 mb-2 mr-2"
                           asp-area="AreaShop"
                           asp-controller="Shop"
                           asp-action="AddToCart"
                           asp-route-itemId="@item.Id">Add To Cart</a>
                        <a class="btn btn-danger col-lg-5 mb-2"
                           asp-area="AreaShop"
                           asp-controller="Shop"
                           asp-action="ItemDetails"
                           asp-route-itemId="@item.Id">Details</a>
                        <a class="btn btn-primary col-lg-5 mb-2 text-light"
                           data-toggle="modal" data-target="#adminItemDeleteModal">Delete</a>
                        <div class="modal fade" id="adminItemDeleteModal" tabindex="-1" role="dialog" aria-labelledby="adminItemDeleteLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Delete article</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure to delete this item?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                        <a type="button" class="btn btn-primary"
                                           a asp-area="AreaAdministration"
                                           asp-controller="Administration"
                                           asp-action="DeleteItem"
                                           asp-route-itemId="@item.Id">
                                            Confirm
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <h3 class="mt-5">No items in the shop</h3>
        }
    </div>
</div>
