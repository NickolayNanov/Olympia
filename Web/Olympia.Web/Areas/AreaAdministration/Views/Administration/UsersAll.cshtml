@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "UsersAll";
    @model IEnumerable<Olympia.Data.Models.ViewModels.AdminViewModels.ListedUserViewModel>
}
@if (Model.Any())
{
    <div class="container">
        <div class="row">
            @foreach (var user in Model)
            {
                <div class="card col-md-4 mb-4">
                    <h3 class="mb-4 position-relative">@user.UserName - @user.FullName</h3>
                    <img src="@user.ProfilePicturImgUrl" alt="Loading..." style="height:50%;width:50%" />

                    <a class="btn btn-primary mt-4 text-light"
                       asp-area="AreaAdministration"
                       asp-controller="Administration"
                       asp-action="UserDetails"
                       asp-route-username="@user.UserName">
                        Details
                    </a>
                </div>
            }
        </div>
    </div>
}
else
{
    <h3 class="text-danger text-center">There are currently no users.</h3>
}
