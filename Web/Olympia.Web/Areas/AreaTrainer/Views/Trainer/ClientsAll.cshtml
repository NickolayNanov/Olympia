
@{
    ViewData["Title"] = "ClientsAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @model IEnumerable<Olympia.Data.Models.ViewModels.BlogPartViewModels.UserViewModel>
    int index = 1;
}

<h1 class="text-center">ClientsAll</h1>

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Full Name</th>
            <th scope="col">Username</th>
            <th scope="col">Age</th>
            <th scope="col">Weight</th>
            <th scope="col">Height</th>
            <th scope="col">Gender</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model)
        {//TODO: Make userViewModel
        <tr data-href="/AreaTrainer/Trainer/ClientDetails?username=@client.Username">
            <td scope="row">@(index++)</td>
            <td>@client.FullName</td>
            <td>@client.Username</td>
            <td>@client.Age</td>
            <td>@(string.IsNullOrEmpty(client.Weight) ? "-" : client.Height)</td>
            <td>@(string.IsNullOrEmpty(client.Height) ? "-" : client.Height)</td>
            <td>@client.Gender.ToString()</td>
        </tr>
        }
    </tbody>
</table>