
@{
    ViewData["Title"] = "MyTrainer";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @model Olympia.Data.Domain.OlympiaUser
}

<div class="text-center">
    <a class="btn btn-danger text-light"
       data-toggle="modal" data-target="#breakContractDeleteModal">
        Break contract
    </a>
    <div class="modal fade" id="breakContractDeleteModal" tabindex="-1" role="dialog" aria-labelledby="breakContractDeleteModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Delete article</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure that you want to break your contract with @Model.UserName ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <a type="button" class="btn btn-primary"
                       asp-area="AreaClient"
                       asp-controller="Client"
                       asp-action="LeaveTrainer"
                       asp-route-trainerUsername="@Model.UserName">
                        Confirm
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="d-flex justify-content-between row">
        <div class="card card-trainer ml-4 mt-4 col-md-6">
            <img src="@Model.ProfilePicturImgUrl" alt="Loading..." style="width:100%">
            <h3>@Model.FullName</h3>
            <p class="title">Olympia Trainer</p>

        </div>
        <div class="col-md-6 mt-4">
            <h5><strong>@Model.Description</strong></h5>
        </div>
    </div>
</div>